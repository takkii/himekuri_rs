#!/usr/bin/env ruby
# frozen_string_literal: true

# vim: filetype=ruby

lib = File.expand_path('lib', __dir__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

require 'rbconfig'

begin
  host_os = RbConfig::CONFIG['host_os']
  case host_os
  when /mswin|msys|mingw|cygwin|bccwin|wince|emc/
    puts 'まだ、Windowsコマンドを用意していません !'
  when /darwin|mac os/
    require 'himekuri_rs'
    Hello.himekuri
  when /linux/
    require 'himekuri_rs_l'
    World.himekuri
  else
    puts 'その他の環境でコマンドを用意していません !'
  end
rescue StandardError => e
  puts e.printStackTrace
ensure
  GC.start
end

__END__